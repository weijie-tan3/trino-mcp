# Trino Connection Configuration
TRINO_HOST=localhost
TRINO_PORT=8080
TRINO_USER=trino
TRINO_HTTP_SCHEME=http

# Optional: Default catalog and schema
TRINO_CATALOG=
TRINO_SCHEMA=

# Query Execution Permissions:
# Set to "true" to allow write queries (INSERT, UPDATE, DELETE, CREATE, DROP, etc.)
# Set to "false" (default) to allow only read queries (SELECT, SHOW, DESCRIBE, etc.)
ALLOW_WRITE_QUERIES=false

# Authentication Options:

# Option 1: Basic Authentication (username/password)
TRINO_PASSWORD=

# Option 2: OAuth2 Authentication
AUTH_METHOD="OAUTH2" # Set to "OAUTH2" to enable OAuth2 authentication
